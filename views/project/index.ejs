<%- include ("../partials/left") %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Project</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard/index">Home</a></li>
              <li class="breadcrumb-item active">Project</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->

      <% if(typeof messages != 'undefined' &&  messages !=''){ %>
        <div class="alert alert-success" role="alert">
            <%= messages %>
        </div>
      <% } %>
    </section>

    <!-- Main content -->
    <section class="content">
   
      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <!-- <h3 class="card-title">Category listing</h3> -->
          
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-10">
                <h3 class="card-title">Project listing</h3>
              </div>
              <div class="col-sm-2">
                <a href="/project/create" class="btn btn-block btn-success" style="float:right;"> Add Project </a>
              </div>
            </div>
          </div>
       
        </div>
        <div class="card-body">
          <table class="table table-bordered table-hover" id="datatable">
              <thead>
                  <tr>
                      
                      <th style="width: 20%">
                       # Project Name
                      </th>
                      <th style="width: 30%">
                          Team members
                      </th>
                      <th>
                        Estimated budget
                      </th>
                      <th style="width: 8%" class="text-center">
                          Status
                      </th>
                      <th style="width: 20%">
                         Action
                      </th>
                  </tr>
              </thead>
              <tbody>
                 <% project.forEach(function(projects) {
                   let date = projects.createdAt;
                   let res = date.split("T");
                    %>
                  <tr>
                      
                      <td># <%= projects.project_name %><br>
                      Created  <%= res[0] %></td>
                      <td><% projects.teammember.forEach(function(team) { %><%= team.fullname %> &nbsp;&nbsp;<% }) %></td>
                      <td ><%= projects.estimated_budget %></td>
                      <td class="project-state">
                        <% if(projects.status == 'Pre Sale'){ %>
                           <span class="badge badge-primary"><%= projects.status %></span>
                        <% } %>
                        <% if(projects.status == 'On Hold'){ %>
                          <span class="badge badge-secondary"><%= projects.status %></span>
                        <% } %>
                        <% if(projects.status == 'Processing'){ %>
                          <span class="badge badge-warning"><%= projects.status %></span>
                        <% } %>
                        <% if(projects.status == 'Canceled'){ %>
                          <span class="badge badge-danger"><%= projects.status %></span>
                        <% } %>
                        <% if(projects.status == 'Success'){ %>
                          <span class="badge badge-success"><%= projects.status %></span>
                        <% } %>
                        
                      </td>
                      <td class="project-actions text-right">
                          <!-- <a class="btn btn-primary btn-sm" href="#">
                              <i class="fas fa-folder">
                              </i>
                              View
                          </a> -->
                          <a class="btn btn-info btn-sm" href="edit/<%= projects._id %>">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                          </a>
                       
                      </td>
                  </tr>
                  <% }); %>
              </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
      

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%- include ("../partials/footer") %>


  <!-- /.control-sidebar -->

<!-- ./wrapper -->


